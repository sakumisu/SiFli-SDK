from building import *

cwd = GetCurrentDir()

src = Glob('./*.c')
path =  [cwd, 
         os.path.join(cwd, '../include')]

group = DefineGroup('Drivers', src, depend = ['BSP_USING_BOARD_SF32LB52_LCD_A128R16'], CPPPATH = path)

if GetDepend('BSP_USING_BOARD_SF32LB52_LCD_A128R16'):
    group = group + SConscript('../sf32lb52-nano_base/script/SConscript')

Return('group')
